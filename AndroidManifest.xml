<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jneander.truecost"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="10" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name=".main.Query"
            android:label="@string/app_name"
            android:theme="@style/ScrollLayout" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".main.Account"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/account_title"
            android:theme="@style/ScrollLayout" >
        </activity>
        <activity
            android:name=".main.Results"
            android:label="@string/results_title"
            android:theme="@style/ScrollLayout" >
        </activity>
        <activity
            android:name=".main.About"
            android:label="@string/about_title"
            android:theme="@style/ScrollLayout" >
        </activity>
    </application>

</manifest>